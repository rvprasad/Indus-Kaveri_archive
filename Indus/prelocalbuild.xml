<project>
    <property file="antbuild.properties"/>        
    <property name="package" value="edu.ksu.cis.indus"/>
    <property name="ant.project.name" value="indus.indus"/>

    <import file="../StaticAnalyses/prelocalbuild.xml"/>
    <import file="../JavaSlicer/prelocalbuild.xml"/>

    <path id="indus.indus.docsrcpath">
        <pathelement location="src"/>
   	    <pathelement location="src-xml"/>
    </path>

    <path id="indus.indus.srcpath">
        <path refid="${ant.project.name}.docsrcpath"/>
   	    <pathelement location="src-test"/>
    </path>

    <path id="srcpath">
        <path refid="${ant.project.name}.srcpath"/>
	    <path refid="indus.staticanalyses.srcpath"/>
   	    <path refid="indus.javaslicer.srcpath"/>
    </path>

    <path id="indus.indus.classpath">
        <pathelement location="/usr/local/javaclasses/sootclasses.jar"/>
        <pathelement location="/usr/local/javaclasses/commons-logging-api.jar"/>
        <pathelement location="/usr/local/javaclasses/commons-collections.jar"/>
        <pathelement location="/usr/local/javaclasses/commons-lang.jar"/>
        <pathelement location="/usr/local/javaclasses/commons-pool.jar"/>
		<pathelement location="/usr/local/javaclasses/commons-cli.jar"/>
        <pathelement location="/usr/local/javaclasses/xmlenc.jar"/>
        <pathelement location="/usr/local/javaclasses/junit.jar"/>        
        <pathelement location="/usr/local/javaclasses/xmlunit.jar"/>
        <pathelement location="/usr/local/javaclasses/swt/swt.jar"/>    
    </path>

    <path id="classpath">
        <path refid="${ant.project.name}.classpath"/>
        <path refid="indus.javaslicer.classpath"/>
        <path refid="indus.staticanalyses.classpath"/>
    </path>
</project>
