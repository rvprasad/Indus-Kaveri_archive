<project>
    <property file="antbuild.properties"/>
    <property name="package" value="edu.ksu.cis.indus"/>
    <property name="ant.project.name" value="indus.javaslicer"/>

    <condition property="custombuild.exists">
        <equals arg1="${ant.project.name}" arg2="indus.javaslicer"/>
    </condition>

    <path id="indus.javaslicer.docsrcpath">
    	<pathelement location="../JavaSlicer/src"/>
    	<pathelement location="../JavaSlicer/src-xml"/>
    </path>

    <path id="indus.javaslicer.srcpath">
        <path refid="indus.javaslicer.docsrcpath"/>
    	<pathelement location="../JavaSlicer/src-test"/>
    </path>
    
    <path id="indus.javaslicer.classpath">
        <pathelement location="/usr/local/javaclasses/sootclasses.jar"/>
        <pathelement location="/usr/local/javaclasses/junit.jar"/>
        <pathelement location="/usr/local/javaclasses/jibx-run.jar"/>
        <pathelement location="/usr/local/javaclasses/xpp3.jar"/>  
        <pathelement location="/usr/local/javaclasses/commons-cli.jar"/>
        <pathelement location="/usr/local/javaclasses/commons-logging-api.jar"/>
        <pathelement location="/usr/local/javaclasses/commons-pool.jar"/>
        <pathelement location="/usr/local/javaclasses/commons-lang.jar"/>
        <pathelement location="/usr/local/javaclasses/commons-collections.jar"/>
        <pathelement location="/home/venku/projects/Misc/banderaNG/lib/bandera/banderaTools.jar"/>        
        <pathelement location="/usr/local/javaclasses/swt/swt.jar"/>
        <pathelement location="/usr/local/javaclasses/xmlunit.jar"/>
    	<pathelement location="../Indus/${build.dir}/"/>
	    <pathelement location="../StaticAnalyses/${build.dir}/"/>        
    </path>    
    
    <path id="bind.classpath">
      <pathelement location="/usr/local/javaclasses/bcel.jar"/>
      <pathelement location="/usr/local/javaclasses/jibx-bind.jar"/>
      <pathelement location="/usr/local/javaclasses/jibx-run.jar"/>
      <pathelement location="/usr/local/javaclasses/xpp3.jar"/>  
    </path>
   
    <taskdef name="bind" classname="org.jibx.binding.ant.CompileTask">
       <classpath refid="bind.classpath"/>
     </taskdef>
  
    <target name="bind">
        <bind verbose="true" binding="${basedir}/auxiliary/slicerConfig_JiBXBinding.xml">
        	<classpath>
        		<path refid="bind.classpath"/>
	        	<pathelement location="../Indus/${build.dir}/"/>
    	        <pathelement location="${build.dir}"/>
        	</classpath>
        </bind>
    </target>
    
    <target name="custombuild">
        <antcall target="bind"/>
    </target>
</project>
